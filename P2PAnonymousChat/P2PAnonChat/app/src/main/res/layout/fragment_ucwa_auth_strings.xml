<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.microsoft.office.p2panonchat.UcwaAuthStrings"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:text="@string/ucwa_url"
        android:typeface="monospace"
        android:id="@+id/ucwaUrlLabel"

        android:layout_height="20dp"
        android:layout_marginTop="31dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/webToken"
         />

    <TextView
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:text="@string/web_token"
        android:typeface="monospace"
        android:id="@+id/webTokenLabel"
        android:layout_marginTop="20dp"
         />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/ucwaURL"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:id="@+id/okButton"
        android:layout_gravity="center_horizontal" />


</LinearLayout>
